<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="triangle" class="com.example.demo.Triangle">
        <property name="pointA" ref="zeroPoint-alias"/>
        <property name="pointB">
            <bean class="com.example.demo.Point">
                <property name="x" value="-20" />
                <property name="y" value="0" />
            </bean>
        </property>
        <property name="pointC">
            <bean class="com.example.demo.Point">
                <property name="x" value="20" />
                <property name="y" value="0" />
            </bean>
        </property>
    </bean>
    <alias name="triangle" alias="triangle-alias"/>

    <bean id="zeroPoint" class="com.example.demo.Point" name="zero-point-name">
        <property name="x" value="0" />
        <property name="y" value="0" />
    </bean>
    <alias name="zeroPoint" alias="zeroPoint-alias"/>
</beans>