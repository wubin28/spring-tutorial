<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="pointA" class="com.example.demo.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointB" class="com.example.demo.Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.example.demo.Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="triangle" class="com.example.demo.Triangle">
        <constructor-arg index="0" ref="pointA"/>
        <constructor-arg index="1" ref="pointB"/>
        <constructor-arg index="2" ref="pointC"/>
    </bean>
    <bean id="circle" class="com.example.demo.Circle">
        <constructor-arg type="com.example.demo.Point" ref="pointB"/>
    </bean>
</beans>
